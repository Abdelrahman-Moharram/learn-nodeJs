<div class="container py-5">
  <div class="row">

    {{#each requests as |request|}}
      <div class="col-lg-3 col-md-6 col-sm-12 px-2">
        <div class="card">
          <div class="mt-3 mb-4 mx-auto w-fit-content">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
              class="rounded-circle img-fluid d-block" style="width: 100px;" />
              {{#if true}}
                <div class="active-circle">
                </div>
              {{/if}}
          </div>
          <div class="card-body">
            <a href="/u/{{request.sender}}" class="d-block h5 card-title text-center text-primary">@{{request.sender}}</a>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <div class="d-flex justify-content-space-around">
              <a href="/accept-request/{{request._id}}?next=/friends-requests" title="accept" class="btn btn-success"><i class="bi bi-check"></i></a>
              <a href="/remove-request/{{request._id}}?next=/friends-requests" title="remove" class="btn btn-danger"><i class="bi bi-x"></i></a>
              <a href="/chat/{{request.sender}}" title="message" class="btn btn-primary"><i class="bi bi-chat-fill"></i></a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>