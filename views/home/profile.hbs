<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">
        <ul>
        {{#each errors as |error|}}
        <li class="text-danger">{{error}}</li>
        {{/each}}
        </ul>
        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4 mx-auto w-fit-content">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                class="rounded-circle img-fluid d-block" style="width: 100px;" />
                {{#if true}}
                  <div class="active-circle">
                  </div>
                {{/if}}
            </div>
            <h4 class="mb-2">{{u.name}}</h4>
            {{#if true}}
              <span class="d-block text-muted font-size-small mb-2">Active now</span>
            {{/if}}

            <p class="text-muted mb-4">@{{u.username}}<span class="mx-2">|</span> <a
                href="#!">url</a></p>
            <div class="mb-4 pb-2">
              <button type="button" class="btn btn-outline-primary btn-floating">
                <i class="bi bi-facebook"></i>
              </button>
              <button type="button" class="btn btn-outline-primary btn-floating">
                <i class="bi bi-twitter"></i>
              </button>
              <button type="button" class="btn btn-outline-primary btn-floating">
                <i class="bi bi-skype"></i>
              </button>
            </div>
            {{#if friendShip}}
              <div class="d-block text-muted text-center font-size-small mb-3">
                Friends
              </div>
            {{/if}}
            <div class="d-flex justify-content-center">
            {{#if frOps.sendAdd}}  
                {{!--   --}}
                <a href="/{{u.username}}/add-friend?next=/u/{{u.username}}" onclick='AddFriendNotifications({receiver_id:"{{u._id}}", receiver_username:"{{u.username}}", type:"AddFriend", sender_username:"{{user.username}}"})' class="btn btn-primary btn-rounded btn-lg mx-1">
                      <i class="bi bi-person-fill-add"></i> add friend
                </a>
            {{/if }}

            

            {{#if frOps.is_sender}}
              <a href="/remove-request/{{FriendRequest._id}}?next=/u/{{u.username}}" class="btn btn-dark text-white btn-rounded btn-lg mx-1">
                <i class="bi bi-x-circle"></i> remove request
              </a>
            {{/if}}

            {{#if frOps.is_receiver}}
              <a href="/accept-request/{{FriendRequest._id}}?next=/u/{{u.username}}" class="btn btn-primary btn-rounded btn-lg mx-1">
                <i class="bi bi-check"></i> accept request
              </a>
            {{/if}}
            {{#if frOps.sendMessage}}
                <a href="/chat/{{frOps.chat_id}}" class="btn btn-primary btn-rounded btn-lg mx-1">
                <i class="bi bi-chat-fill"></i> Message now
              </a>
            {{/if }}
            </div>
            <div class="d-flex justify-content-between text-center mt-5 mb-2">
              <div>
                <p class="mb-2 h5">8471</p>
                <p class="text-muted mb-0">Wallets Balance</p>
              </div>
              <div class="px-3">
                <p class="mb-2 h5">8512</p>
                <p class="text-muted mb-0">Income amounts</p>
              </div>
              <div>
                <p class="mb-2 h5">4751</p>
                <p class="text-muted mb-0">Total Transactions</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

